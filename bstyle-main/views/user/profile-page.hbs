{{!-- <%-include('.. /user/layout/user-head.ejs')%> --}}
  <section class="vh-100 mt-5" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-6 mb-4 mb-lg-0">
          <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
              <div class="col-md-4 gradient-custom text-center text-white"
                style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                {{#if profilePic}}
                <img src='/public/product-images/{{profilePic}}' alt="Avatar" class="img-fluid mt-5"
                  style="width: 80px; height: 80px;" />
                {{else}}
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                  alt="Avatar" class="img-fluid mt-5" style="width: 80px; height: 80px;" />
                {{/if}}

                <a onclick="changeProfile()" style="display: block;font-size: 10px;" class="mt-3 text-primary"
                  id="changeButton">change  profile</a>
                <form action="/profile-pic" method="post" enctype="multipart/form-data" style="display: none;"
                  id="picForm" class="mt-3"><input type="file" name="image" class="form-control"
                    placeholder="select a image"> <button type="submit" class="mt-3">submit</button>
                </form>
                <h5 class="mt-3">
                  <%=userName%>
                </h5>
                <i class="far fa-edit mb-5"></i>
              </div>
              <div class="col-md-8">
                <div class="card-body p-4">
                  <h6>Profile</h6>
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-12 mb-3">
                      <h6>Email</h6>
                      <p class="text-muted">{{userDetails.email}}</p>
                    </div>
                    <div class="col-6 mb-3">
                      <h6>Phone</h6>
                      <p class="text-muted">{{userDetails.mobile}}</p>
                    </div>
                  </div>
                  <h6></h6>
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    {{!-- <div class="col-6 mb-3">
                      <h6>My courses</h6>
                      <a class="text-muted" href="/mycourses">
                        <%=courseNo%> course
                      </a>
                    </div> --}}
                    <div class="col-6 mb-3">
                      <h6>My Orders</h6>
                      <a class="text-muted" href="/orders">Click Here to view</a>
                    </div>
                  </div>
                  <hr>
                  <div class="d-flex justify-content-start">
                    {{!-- <a href="/editProfile" class="btn btn-info mr-5" style="font-size: 12px;">Edit Profile</a>
                    <a href="/logout" class="btn btn-danger ml-5" style="font-size: 12px;">Log Out</a> --}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    function changeProfile() {
      let button = document.getElementById('changeButton')
      let form = document.getElementById('picForm')
      button.style.display = 'none'
      form.style.display = 'block'
    }
  </script>
  {{!-- <%-include('. /layout/user-foot.ejs')-%> --}}